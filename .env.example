# Development Environment Configuration for DocsFlow

# Python virtual environment
PYTHONPATH=.
PYTHON_VERSION=3.11

# MkDocs configuration
MKDOCS_CONFIG_FILE=mkdocs.yml
MKDOCS_STRICT=true

# Development server
DEV_HOST=localhost
DEV_PORT=8000
LIVE_RELOAD=true

# Docker configuration
DOCKER_IMAGE=docsflow
DOCKER_TAG=latest
DOCKER_BUILDKIT=1

# Fluid Topics Configuration (use .env.local for real values)
FLUID_URL=https://your-portal.fluidtopics.com/api/upload
FLUID_USER=your_username
FLUID_PASS=your_password

# Pipeline configuration
PIPELINE_TIMEOUT=300
RETRY_ATTEMPTS=3
ENABLE_NOTIFICATIONS=true

# Quality checks
ENABLE_LINTING=true
ENABLE_LINK_CHECK=true
ENABLE_SPELL_CHECK=false
STRICT_MODE=true

# Logging
LOG_LEVEL=INFO
LOG_FILE=logs/docsflow.log

# Feature flags
ENABLE_MERMAID=true
ENABLE_CODE_HIGHLIGHTING=true
ENABLE_SEARCH=true
ENABLE_GIT_REVISION=true